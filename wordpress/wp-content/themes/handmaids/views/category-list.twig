            {% for post in posts %}
            <div class="content-container row">
                <a name="{{loop.index}}"></a>
                <div>
                    <div class="post-date row">{{post.display_date}}</div>
                    <div class="post-title row">{{post.title}}</div>
                </div>
                <div class="post-content row">
                {{post.content}}
                </div>
            </div>
            {% endfor %}
            {% endif %}
