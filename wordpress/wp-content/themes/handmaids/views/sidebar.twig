<div id="sidebar">
	<ul>
		{% for page in pages %}
			<li{% if page.is_in_page_path %} class="current"{% endif%}><a href="{{page.guid}}">{{page.title}}</a></li>
				{% if page.is_in_page_path and page.children|e %}
					<ul>
						{% for sub_page in page.children %}
							<li{% if sub_page.is_in_page_path %} class="current"{% endif %}><a href="{{sub_page.guid}}">{{sub_page.title}}</a></li>
						{% endfor %}
					</ul>
				{% endif %}
			</li>
		{% endfor %}
	</ul>
</div>